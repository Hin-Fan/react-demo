  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Server",
      "program": "${workspaceRoot}/index.js",
      "runtimeArgs": [
        "-r",
        "esm"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "10000",
        "--reporter",
        "spec",
        "--require",
        "esm",
        "${workspaceRoot}/test"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}